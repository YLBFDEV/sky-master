<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/homepage_grid_padding">

    <RelativeLayout
            android:id="@+id/module_image_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
        <ImageView
                android:id="@+id/module_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="center"
                android:background="@drawable/module_selector"/>
        <RelativeLayout
                android:id="@+id/todo_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/module_image"
                android:layout_marginLeft="@dimen/module_todo_margin_left"
                android:background="@drawable/bg_undo_hint"
                android:visibility="visible">
            <TextView
                    android:id="@+id/todo_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/home_module_text_white"
                    android:textStyle="bold"
                    android:textSize="@dimen/textsize_small"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView android:id="@+id/module_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/module_image_wrapper"
              android:layout_alignParentBottom="true"
              android:gravity="center_horizontal"
              android:textSize="@dimen/textsize_large"
              android:textColor="@color/gray"
              android:layout_marginTop="2dp"
              android:layout_marginBottom="5dp"/>

</RelativeLayout>