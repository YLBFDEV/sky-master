<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/docs_grid_item_background"
        android:id="@+id/doc_grid_relativeLayout_root"
        android:layout_height="160dp"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_width="wrap_content">
    <RelativeLayout
            android:id="@+id/doc_grid_relativeLayout"
            android:layout_width="fill_parent"
            android:visibility="visible"
            android:layout_margin="0dp"
            android:layout_height="160dp">
        <ImageView
                android:id="@+id/doc_folder_image"
                android:background="@drawable/doc_ic_folder"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        <TextView
                android:id="@+id/doc_folder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:textSize="22dp"
                android:textColor="@color/black"
                />
        <LinearLayout
                android:id="@+id/doc_num_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="文档数:"/>
            <TextView
                    android:id="@+id/doc_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/doc_grid_last_relativeLayout"
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:padding="0dp"
            android:layout_height="160dp">
        <ImageView
                android:background="@drawable/ic_add_features"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        <TextView
                android:text="@string/new_folder"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:layout_marginTop="105dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>