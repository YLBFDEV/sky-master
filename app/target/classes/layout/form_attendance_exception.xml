<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:sky="http://schemas.android.com/apk/res/com.skytech.moa"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.skytech.moa.doc.widgets.FieldDateText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            sky:keyid="date"
            sky:keyname="@string/exception_date"/>
    <com.skytech.moa.doc.widgets.FieldEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            sky:keyname="@string/exception_state"
            sky:keyid="state"/>
    <com.skytech.moa.doc.widgets.FieldEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            sky:keyname="@string/exception_declare"
            sky:keyid="declare"/>
</LinearLayout>