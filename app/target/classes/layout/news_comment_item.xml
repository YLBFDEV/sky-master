<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/iv_news_comment_item_uidpic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_launcher"/>

        <RelativeLayout
                android:layout_toRightOf="@id/iv_news_comment_item_uidpic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_news_comment_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名1"
                    android:textSize="18sp"
                    android:textColor="@color/blue"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>

            <TextView
                    android:id="@+id/tv_news_comment_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_news_comment_item_name"
                    android:text="2015-12-25 12:25"
                    android:textSize="14sp"
                    android:textColor="@color/list_divider"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>

            <TextView
                    android:id="@+id/tv_news_comment_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论内容评论内容评论内容评论内容评论内容评论内容评论内容评论内容评论内容"
                    android:textSize="18sp"
                    android:layout_below="@+id/tv_news_comment_item_time"
                    android:layout_margin="5dp"
                    />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>