<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <include layout="@layout/docs_library_head"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/doc_ic_search"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
            />
    <RelativeLayout
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
        <RadioGroup android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"

                >
            <RadioButton android:id="@+id/time_soft"
                         android:button="@null"
                         android:layout_height="40dp"
                         android:layout_width="120dp"
                         android:background="@drawable/btn_doc_soft_selector"
                         android:text="时间"
                         android:textColor="@color/black"
                         android:gravity="center"
                         android:checked="true"
                    />

            <RadioButton android:id="@+id/name_soft"
                         android:button="@null"
                         android:layout_height="40dp"
                         android:layout_width="120dp"
                         android:background="@drawable/btn_doc_soft_selector"
                         android:gravity="center"
                         android:textColor="@color/black"
                         android:layout_marginLeft="-4dp"
                         android:text="字母"/>


        </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
            android:visibility="visible"
            android:background="@color/white"
            android:layout_marginTop="120dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <com.handmark.pulltorefresh.PullToRefreshListView
                android:id="@+id/detail_doc"
                style="@style/ListBase"
                android:scrollbars="none"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
    </RelativeLayout>

</LinearLayout>